{
	"name": "Dalhousie-Libraries/Seed-Library",
	"description": "Seed Lending Library",
	"keywords": ["seed", "lending", "library"],
	"license": "MIT",
        "authors": [
            {
                "name": "Luis Filipe Severgnini",
                "homepage": "http://www.lfsevergnini.com"
            }
        ],
	"require": {
		"laravel/framework": "4.1.*",                
                "zizaco/confide": "~3.2",
                "zizaco/entrust": "~1.2",
                "bllim/datatables": "~1.3",
                "laravelbook/ardent": "dev-master",
                "barryvdh/laravel-debugbar": "1.*",
                "bkwld/croppa": "~3.0",
                "cviebrock/eloquent-sluggable": "2.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
                        "php artisan debugbar:publish"
		],
		"post-create-project-cmd": [
			"php artisan key:generate",
                        "php artisan optimize",
                        "php artisan debugbar:publish"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
